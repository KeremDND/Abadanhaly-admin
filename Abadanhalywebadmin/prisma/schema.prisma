// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Page {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  status    String   @default("published")
  blocks    Block[]
  seoTitle  String?
  seoDesc   String?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Block {
  id        String  @id @default(cuid())
  pageId    String
  kind      String
  position  Int
  data      Json
  page      Page    @relation(fields: [pageId], references: [id])

  @@index([pageId, position])
}

model Media {
  id        String   @id @default(cuid())
  url       String
  width     Int?
  height    Int?
  altKeyId  String?
  createdAt DateTime @default(now())
  productImages ProductImage[]
}

model Product {
  id        String   @id @default(cuid())
  slug      String   @unique
  sku       String   @unique
  nameKeyId String?
  descKeyId String?
  color     String
  sizes     String
  tags      String
  isActive  Boolean  @default(true)
  images    ProductImage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductImage {
  id        String  @id @default(cuid())
  productId String
  mediaId   String
  position  Int     @default(0)
  altKeyId  String?
  product   Product @relation(fields: [productId], references: [id])
  media     Media   @relation(fields: [mediaId], references: [id])

  @@index([productId, position])
}

model Store {
  id         String   @id @default(cuid())
  slug       String   @unique
  name       String
  type       String   @default("retail")
  address    String
  district   String?
  city       String   @default("Ashgabat")
  country    String   @default("Turkmenistan")
  latitude   Float?
  longitude  Float?
  phone      String?
  whatsapp   String?
  email      String?
  mapsUrl    String?
  hours      Json?
  services   Json?
  deliveryKm Int?
  isActive   Boolean  @default(true)
  priority   Int      @default(0)
  seoTitle   String?
  seoDesc    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Setting {
  id         Int     @id @default(1)
  brandName  String  @default("Abadan Haly")
  primaryHex String  @default("#0B6A43")
  arEnabled  Boolean @default(true)
  deliveryInfoKeyId String?
}

model TranslationKey {
  id        String   @id @default(cuid())
  page      String
  section   String
  key       String
  values    TranslationValue[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([page, section, key], name: "page_section_key")
  @@index([page, section])
}

model TranslationValue {
  id     String @id @default(cuid())
  keyId  String
  locale String
  value  String
  key    TranslationKey @relation(fields: [keyId], references: [id])

  @@unique([keyId, locale], name: "key_locale")
  @@index([locale])
}
